{
  "name": "jekyll-pack",
  "version": "2.0.0a",
  "description": "jekyll webpack gulp es6 boilerplate",
  "main": "dist/app.js",
  "repository": "",
  "author": "Kenny Inthirath <kenny.inthirath@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "gulp dev",
    "dist": "NODE_ENV=production JEKYLL_ENV=production jekyll build --source ./jekyll-src/ --destination ./dist && webpack && gulp favicons",
    "lint": "npm run lint:js & npm run lint:css",
    "lint:js": "eslint .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint 'jekyll-src/**/*.css'",
    "lint:css:fix": "stylefmt --recursive jekyll-src/",
    "lint:staged": "lint-staged",
    "favicons": "gulp favicons --src"
  },
  "lint-staged": {
    "*.js": [
      "lint:js",
      "git add"
    ],
    "*.css": [
      "lint:css",
      "git add"
    ]
  },
  "pre-commit": [
    "lint:staged"
  ],
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "browser-sync": "^2.18.13",
    "css-loader": "^0.28.7",
    "cssnano": "^3.10.0",
    "eslint": "^4.12.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "gulp": "^3.9.1",
    "gulp-favicons": "^2.2.7",
    "lint-staged": "^6.0.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.9",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "run-sequence": "^2.2.0",
    "style-loader": "^0.19.0",
    "stylelint": "^8.3.1",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-declaration-use-variable": "^1.6.0",
    "stylelint-order": "^0.8.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.6",
    "webpack-merge": "^4.1.1",
    "webpack-module-hot-accept": "^1.0.5"
  },
  "dependencies": {
    "webpack-dev-middleware": "^1.12.2",
    "webpack-hot-middleware": "^2.21.0"
  }
}
